!!!5
html(ng-app="Personas", ng-controller="AppCtrl")
  head
    meta(charset='utf8')
    base(href='/')
    title #{title} - Personas
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    include navbar
    app-map.google-map(center="loc")
    .container-fluid
      block content
    .sidebar
      block sidebar
    footer
      | Angular seed app: v
      span(app-version)

    block javascript
        script(src='//maps.google.com/maps/api/js?sensor=false')
        script(src='/javascripts/lib/maps/markermanager.js')
        script(src='/javascripts/lib/angular/angular.js')
        script(src='/javascripts/app.js')
        script(src='/javascripts/services.js')
        script(src='/javascripts/controllers.js')
        script(src='/javascripts/filters.js')
        script(src='/javascripts/directives.js')
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
        script(src='/bootstrap/js/bootstrap.min.js')